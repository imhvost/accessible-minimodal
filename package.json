{
  "name": "accessible-minimodal",
  "version": "2.0.7",
  "description": "Accessible, lightweight, stylish modal library in JavaScript / TypeScript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imhvost/accessible-minimodal"
  },
  "keywords": [
    "modal",
    "dialog",
    "accessible",
    "pure",
    "stylish",
    "typescript modal",
    "multiple modal"
  ],
  "author": "imhvost",
  "license": "MIT",
  "type": "module",
  "main": "./dist/accessible-minimodal.umd.cjs",
  "module": "./dist/accessible-minimodal.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/accessible-minimodal.js",
      "require": "./dist/accessible-minimodal.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts --fix --ignore-path .gitignore",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.2.0"
  }
}
